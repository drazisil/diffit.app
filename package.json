{
  "name": "remix-template-remix",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && npm run build:remix",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "npm run dev:css && npm run dev:remix",
    "dev:css": "npm run generate:css",
    "dev:remix": "cross-env NODE_ENV=development netlify dev",
    "generate:css": "npx tailwindcss -i ./style/input.css -o ./app/tailwind.css",
    "start": "cross-env NODE_ENV=production netlify dev"
  },
  "dependencies": {
    "@netlify/functions": "1.0.0",
    "@remix-run/netlify": "1.5.1",
    "@remix-run/node": "1.5.1",
    "@remix-run/react": "1.5.1",
    "cross-env": "7.0.3",
    "diff": "5.1.0",
    "react": "18.1.0",
    "react-dom": "18.1.0"
  },
  "devDependencies": {
    "@remix-run/dev": "1.5.1",
    "@remix-run/eslint-config": "1.5.1",
    "@types/diff": "5.0.2",
    "@types/react": "18.0.12",
    "@types/react-dom": "18.0.5",
    "eslint": "8.17.0",
    "tailwindcss": "3.1.1",
    "typescript": "4.7.3"
  },
  "engines": {
    "node": ">=14"
  }
}
